<div class="modal fade" id="staticBackdrop" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-lg">
    <div class="modal-content" id="m-body">
        
      </div>
  </div>
</div>
<%if current_user != nil%>
<% if current_user.role == 2%>
<div class="container">
    <div class="row">
        <div class='col-auto'>
            <%= form_with url: "/courses/create_course", method: :post do |form| %>
            <button type="submit" class="btn btn-outline-light me-2 text-bg-dark" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            Создать курс
            </button>
            <% end %> 
        </div>
    </div>
</div>
<%end%>
<%end%>
<h1>Courses#index</h1>
<p>Find me in app/views/courses/index.html.erb</p>
<% @courses.each do |course| %>
<%= course.title %>
<% if course.avatar.attached? %>
<%= image_tag(course.avatar, style:"width:150px; height:150px")%>
<%end%>
<div class="container">
              <div class="row">
                  <div class='col-auto'>
                      <%= form_with url: "/courses/show/#{course[:id]}", method: :get do |form| %>
                      <button type="submit" class="btn btn-outline-light me-2 text-bg-dark" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                      Просмотреть курс
                      </button>
                      <% end %> 
                  </div>
              </div>
          </div>
<% end %>
