<h1>Редактирование профиля</h1>
<div class="update__container">
  <%= form_with model: current_user, url: '/users/update', method: :post do |form| %>
    <p><%= form.label :email, "Обновите email" %></p>
    <p><%= form.email_field :email, placeholder: 'E-mail', class: 'form-control custom__input', id: 'email' %></p>
    <p><%= form.label :password, "Обновите пароль" %></p>
    <p><%= form.password_field :password, class: 'form-control custom__input', id: 'passw' %></p>
    <p><%= form.label :password_confirmation, "Повторите пароль" %></p>
    <p><%= form.password_field :password_confirmation, class: 'form-control custom__input', id: 'passw_conf' %></p>
    <p><%= form.label :phone, "Обновите номер" %></p>
    <p><%= form.text_field :phone, class: 'form-control custom__input', id: 'number' %></p>
    <p><%= form.label :old_password, "Введите старый пароль" %></p>
    <p><%= form.password_field :old_password, class: 'custom__input form-control', id: 'passw_old' %></p>
    <div class="update__btns">
    <p><%= form.submit("Обновить", class: "btn btn-outline-light me-2 text-bg-dark") %></p>
  <% end %>


<%=button_to "Назад",  profile_path, method: :get, class: "btn btn-outline-light me-2 text-bg-dark" %></button>
  </div>
</div>
<div id='error_response-container'></div>