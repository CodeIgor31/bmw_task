<%if @param == '0'%>
<div class = "move_left"><h1>Текущие курсы</h1></div>
    <div class="course__grid">
<% @rdy_courses.each do |us_course|%>
    <div class="course__item">
      <div class="course__categories">
        <span class="category"><%=us_course[:course].title[0..55]%></span>
        <span class="course__free">Важный</span>
      </div>
      <div class="course__info">
        <div class="course__title"><%= us_course[:course].title%></div>
        <div class="course__description">
          <%= us_course[:course].description%>
          <%= us_course[:percent] %>
        </div>
      </div>
      <div class="course__avatar">
        <% if us_course[:course].avatar.attached? %>
          <%= image_tag(us_course[:course].avatar, style:"width:150px; height:150px")%>
        <%end%>
      </div>
      <div class="course__additional">
        <div class="course__additionals">
          <i class="material-icons">date_range</i>
          <span class="additional">2 месяца</span>
          <i class="material-icons">sports_soccer</i>
          <span class="additional">Сертификат по программе</span>
          <i class="material-icons">date_range</i>
          <span class="additional">2 часа</span>
        </div>
    <%=button_to "Перейти в курс", "/courses/show/#{us_course[:course].id}", method: :get, class: "btn btn-outline-light me-2 text-bg-dark"%>
          </div>
    </div>
<%end%>
<%else%>
<div class = "move_left"><h1> Пройденные курсы </h1></div>
<% k = 1%>
    <div class="course__grid">
<% @not_rdy_courses.each do |us_course|%>
    <div class="course__item">
      <div class="course__categories">
        <span class="category"><%=us_course.title[0..55]%></span>
        <span class="course__free">Важный</span>
      </div>
      <div class="course__info">
        <div class="course__title"><%= us_course.title%></div>
        <div class="course__description">
          <%= us_course.description%>
        </div>
      </div>
      <div class="course__avatar">
        <% if us_course.avatar.attached? %>
          <%= image_tag(us_course.avatar, style:"width:150px; height:150px")%>
        <%end%>
      </div>
      <div class="course__additional">
        <div class="course__additionals">
          <i class="material-icons">date_range</i>
          <span class="additional">2 месяца</span>
          <i class="material-icons">sports_soccer</i>
          <span class="additional">Сертификат по программе</span>
          <i class="material-icons">date_range</i>
          <span class="additional">2 часа</span>
        </div>
    <%=button_to "Перейти в курс", "/courses/show/#{us_course.id}", method: :get, class: "btn btn-outline-light me-2 text-bg-dark"%>
          </div>
    </div>
<%end%>
<%end%>

